<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="landforlife.tn.controllers.demandeform"
            prefHeight="400.0" prefWidth="600.0">

    <Label fx:id="animalIdLabel" layoutX="30.0" layoutY="30.0" />

    <Label text="Sujet:" layoutX="30.0" layoutY="70.0" />
    <TextField fx:id="sujetField" layoutX="120.0" layoutY="70.0" />

    <Label text="Details:" layoutX="30.0" layoutY="110.0" />
    <TextArea fx:id="detailsArea" layoutX="120.0" layoutY="110.0" prefHeight="200.0" prefWidth="400.0" />

    <Button fx:id="submitButton" text="Submit" layoutX="30.0" layoutY="320.0" onAction="#submitDemande" />

</AnchorPane>